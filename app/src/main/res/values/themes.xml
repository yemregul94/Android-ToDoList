<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_secondary</item>
        <item name="colorSecondaryVariant">@color/theme_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnError">?attr/colorError</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/theme_primary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="MyPopupTheme">
        <item name="android:textColorPrimary">@color/theme_primary_variant</item>
    </style>

    <style name="ColorChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIcon">@drawable/ic_check2</item>
        <item name="checkedIconTint">@color/grey_background</item>
        <item name="chipIconSize">20dp</item>
        <item name="iconEndPadding">-18dp</item>
        <item name="iconStartPadding">-2dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">32dp</item>
    </style>

    <style name="DatePickerTheme">
        <item name="android:textColorSecondary">@color/theme_secondary</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TimePickerTheme">
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorAccent">@color/theme_primary</item>
        <item name="android:textColorSecondary">@color/theme_secondary</item>
    </style>

    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>
</resources>
